<?xml version="1.0" encoding="utf-8"?>
<!-- 带圆角 蓝色背景 黑色边框 按钮 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android"
  android:constantSize="true">
	<item 
		android:state_enabled="true"
		android:state_pressed="true"> 
		<shape>  
			<padding                   
				android:left="5dp"   
				android:top="5dp"   
				android:right="5dp"    
				android:bottom="5dp"   
			/>
			<solid android:color="@color/button_blue_down" />        
			<corners 
				android:topLeftRadius="6dp" 
				android:topRightRadius="6dp"  
				android:bottomRightRadius="6dp" 
				android:bottomLeftRadius="6dp" />      

			       
		</shape>
		
  </item>


	<item 

		android:state_focused="true"
	> 
		<shape>  
			<padding                   
				android:left="5dp"   
				android:top="5dp"   
				android:right="5dp"    
				android:bottom="5dp"   
			/>
			<solid android:color="@color/button_blue_up" />        
			<corners 
				android:topLeftRadius="6dp" 
				android:topRightRadius="6dp"  
				android:bottomRightRadius="6dp" 
				android:bottomLeftRadius="6dp" />      
			<stroke
				android:width="1dp" 
				android:color="#60a0f0" />    
			       
		</shape>
		
  </item>

	<item 
		android:state_enabled="true" 
		android:state_pressed="false"  >
		<shape>  
			<solid android:color="@color/button_blue_up" />        
			<corners 
				android:topLeftRadius="6dp" 
				android:topRightRadius="6dp"  
				android:bottomRightRadius="6dp" 
				android:bottomLeftRadius="6dp" />      

			<padding                   
				android:left="5dp"   
				android:top="5dp"   
				android:right="5dp"    
				android:bottom="5dp"   
      />       
		</shape>  
	</item>

	<item 
	>
		<shape>  
			<solid android:color="@color/button_blue_up" />        
			<corners 
				android:topLeftRadius="6dp" 
				android:topRightRadius="6dp"  
				android:bottomRightRadius="6dp" 
				android:bottomLeftRadius="6dp" />      
			<stroke
				android:width="1dp" 
				android:color="#6C6C6C" />    
			<padding                   
				android:left="5dp"   
				android:top="5dp"   
				android:right="5dp"    
				android:bottom="5dp"   
      />       
		</shape>  
	</item>
</selector>
