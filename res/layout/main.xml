<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:orientation="vertical">

	<FrameLayout
		android:id="@+id/frame_tab"
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:layout_weight="10">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="top"
			android:orientation="vertical">

		</LinearLayout>

	</FrameLayout>

	<FrameLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent">

		<LinearLayout
			android:background="@drawable/tab_background"
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="vertical"
			android:gravity="bottom|center|end"
			android:layout_gravity="bottom"/>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_weight="1.0"
				android:gravity="center">

				<com.xl.view.CheckButton
					android:id="@id/tab_test"
					android:scaleType="centerCrop"
					android:layout_weight="1.0"
					android:layout_width="56dp"
					android:layout_height="56dp"
					android:src="@drawable/celiang"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_weight="1.0"
				android:gravity="center">

				<com.xl.view.CheckButton
					android:id="@id/tab_record"
					android:scaleType="centerCrop"
					android:layout_weight="1.0"
					android:layout_height="56dp"
					android:layout_width="56dp"
					android:src="@drawable/jilu"/>

			</LinearLayout>

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="match_parent"
				android:orientation="vertical"
				android:layout_weight="1.0"
				android:gravity="center">

				<com.xl.view.CheckButton
					android:id="@id/tab_my"
					android:scaleType="centerCrop"
					android:layout_weight="1.0"
					android:layout_height="56dp"
					android:layout_width="56dp"
					android:src="@drawable/geren"/>

			</LinearLayout>

		</LinearLayout>

	</FrameLayout>

</LinearLayout>

